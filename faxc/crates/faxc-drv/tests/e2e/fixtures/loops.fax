// Test fixture: Loops
// Tests while and for loops

fn main() {
    // While loop
    let i: Int = 0;
    while i < 5 {
        print(i);
        i = i + 1;
    }
    
    // For loop (counting up)
    for let j: Int = 0; j < 5; j = j + 1 {
        print(j);
    }
    
    // Nested loops
    let row: Int = 0;
    while row < 3 {
        let col: Int = 0;
        while col < 3 {
            print(col);
            col = col + 1;
        }
        row = row + 1;
    }
    
    // Loop with break condition
    let k: Int = 0;
    while k < 10 {
        if k == 5 {
            break;
        }
        print(k);
        k = k + 1;
    }
}
