-- Example 4: Conditionals
-- If expressions and comparisons

fn max(a: i32, b: i32) -> i32 {
    if a > b { a } else { b }
}

fn min(a: i32, b: i32) -> i32 {
    if a < b { a } else { b }
}

fn abs(x: i32) -> i32 {
    if x < 0 { -x } else { x }
}

fn clamp(x: i32, low: i32, high: i32) -> i32 {
    if x < low { low } else if x > high { high } else { x }
}

fn main() -> i32 {
    max(10, 20) + min(5, 3) + abs(-7) + clamp(15, 0, 10)
}
