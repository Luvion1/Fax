-- Example 8: Tuples
-- Working with tuples

fn swap(a: i32, b: i32) -> (i32, i32) {
    (b, a)
}

fn pair_sum(p: (i32, i32)) -> i32 {
    let (a, b) = p
    a + b
}

fn triple_product(t: (i32, i32, i32)) -> i32 {
    let (a, b, c) = t
    a * b * c
}

fn main() -> i32 {
    let (x, y) = swap(1, 2)
    let s = pair_sum((3, 4))
    let p = triple_product((2, 3, 4))
    x + y + s + p
}
